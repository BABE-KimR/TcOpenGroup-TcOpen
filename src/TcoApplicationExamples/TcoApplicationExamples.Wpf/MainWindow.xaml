<Window
    x:Class="TcoApplicationExamples.Wpf.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TcoApplicationExamples.Wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vortex="http://vortex.mts/xaml"
    Title="MainWindow"
    Width="800"
    Height="450"
    DataContext="{x:Static local:App.PlcAppExamples}"
    mc:Ignorable="d">
    <Grid>
        <ScrollViewer>
            <vortex:RenderableContentControl DataContext="{Binding MAIN._pneuMan}" />
        </ScrollViewer>
    </Grid>
</Window>
