<Window
    x:Class="inxton.vortex.framework.dynamictreeview.wpf.sandbox.DialogWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:inxton.vortex.framework.dynamictreeview.wpf.sandbox"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="250"
    Height="200"
    WindowStyle="SingleBorderWindow"
    mc:Ignorable="d">
    <StackPanel Margin="15" VerticalAlignment="Center">
        <TextBlock Margin="5" Text="New name" />
        <TextBox x:Name="ResponseTextBox" Margin="5" />
        <Button
            Margin="5"
            Click="OKButton_Click"
            Content="OK" />
    </StackPanel>
</Window>
