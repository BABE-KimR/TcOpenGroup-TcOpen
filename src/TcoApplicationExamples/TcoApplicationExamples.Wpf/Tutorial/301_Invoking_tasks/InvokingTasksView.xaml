<UserControl
    x:Class="PlcAppExamples.InvokingTasksView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TcoApplicationExamples.Wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vortex="http://vortex.mts/xaml"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <d:UserControl.DataContext>
        <local:InvokingTasksViewModel />
    </d:UserControl.DataContext>
    <Grid>
        <UniformGrid Margin="10" Columns="2">
            <StackPanel>
                <vortex:RenderableContentControl DataContext="{Binding InvokingTasks.Ground}" />
                <Separator />
                <Button Command="{Binding InvokingTasks.StartGround}">Start Ground</Button>
            </StackPanel>
            <StackPanel>
                <vortex:RenderableContentControl DataContext="{Binding InvokingTasks.Automat}" />
                <Separator />
                <Button Command="{Binding InvokingTasks.StartAutomat}">Start Automat</Button>
            </StackPanel>

        </UniformGrid>
    </Grid>
</UserControl>
