<UserControl
    x:Class="PlcAppExamples.Color_ExampleView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PlcAppExamples"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vortex="http://vortex.mts/xaml"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <d:UserControl.DataContext>
        <local:Color_ExampleViewModel />
    </d:UserControl.DataContext>
    <UniformGrid Columns="2">
        <vortex:RenderableContentControl DataContext="{Binding Color_Example.Colors}" />
        <vortex:RenderableContentControl DataContext="{Binding Color_Example.ColorSequencer}" />
        <StackPanel />
    </UniformGrid>
</UserControl>
